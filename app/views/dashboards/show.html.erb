<div class="mt-3 ms-3 text-center">
    <h1>Shoutr</h1>

    <div class="row m-5">
        <div class="col-sm-6">
            <div class="card h-100 p-2 justify-content-center">
                <%= shout_form_for(TextShout) do |form| %>
                <div class="card-body">
                    <%= form.text_area :body, placeholder: "Shout here!", required: true, :rows => 3, :cols => 20 %>
                </div>
                <% end %>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card h-100 p-2 justify-content-center">
                <%= shout_form_for(PhotoShout) do |form| %>
                <div class="card-body">          
                    <%= form.file_field :image, required: true %>
                </div>
                <% end %>
            </div>
        </div>
    </div>    

    <%= render @dashboard.timeline %>
</div>