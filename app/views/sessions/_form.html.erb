
<%= form_for :session, url: session_path do |form| %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="text-field mb-3 d-grid">
    <%= form.label :email_or_username %>
    <%= form.text_field :email_or_username %>
  </div>

  <div class="password-field mb-3 d-grid">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="d-flex mt-5 justify-content-center align-items-center mb-3">
    <div class="submit-field">
      <%= form.submit class: "btn btn-dark m-1" %>
    </div>

    <div class="other-links">
      <% if Clearance.configuration.allow_sign_up? %>
        <%= link_to t(".sign_up"), sign_up_path, class:"btn btn-outline-dark m-1" %>
      <% end %>
    </div>
  </div>
<% end %>
